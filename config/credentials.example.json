{
  "_comment": "EXAMPLE FILE — Do not use directly. Follow the setup steps below.",
  "_instructions": [
    "1. Go to https://console.cloud.google.com",
    "2. Create a new project named 'Zoya AI Employee'",
    "3. Enable the Gmail API (APIs & Services > Library > Gmail API)",
    "4. Configure OAuth consent screen:",
    "   - User Type: External",
    "   - App name: Zoya",
    "   - Scopes: gmail.readonly, gmail.modify, gmail.send",
    "   - Test users: Add your email address",
    "5. Create OAuth2 credentials:",
    "   - APIs & Services > Credentials > Create > OAuth Client ID",
    "   - Application type: Desktop app",
    "   - Download the JSON file",
    "6. Rename the downloaded file to 'credentials.json'",
    "7. Place it in the project root (PIA-CLAUDE/credentials.json)",
    "8. NEVER commit this file to git (it's in .gitignore)"
  ],

  "google_oauth2": {
    "file": "credentials.json",
    "location": "project root",
    "purpose": "Gmail API authentication",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.send"
    ],
    "generates": "token.json (auto-created on first run)"
  },

  "twilio_whatsapp": {
    "env_vars": {
      "TWILIO_ACCOUNT_SID": "your_account_sid_here",
      "TWILIO_AUTH_TOKEN": "your_auth_token_here"
    },
    "setup_url": "https://www.twilio.com",
    "purpose": "WhatsApp message ingestion via webhook",
    "requires": "ngrok for public webhook URL"
  },

  "linkedin_api": {
    "env_vars": {
      "LINKEDIN_CLIENT_ID": "your_client_id_here",
      "LINKEDIN_CLIENT_SECRET": "your_client_secret_here",
      "LINKEDIN_ACCESS_TOKEN": "your_access_token_here"
    },
    "setup_url": "https://www.linkedin.com/developers/apps",
    "purpose": "LinkedIn post publishing",
    "scope": "w_member_social",
    "note": "API access requires app review — apply early, takes days"
  },

  "env_file_template": {
    "file": ".env",
    "location": "project root",
    "contents": [
      "# Gmail (handled by credentials.json + token.json, no .env needed)",
      "",
      "# Twilio WhatsApp",
      "TWILIO_ACCOUNT_SID=your_sid",
      "TWILIO_AUTH_TOKEN=your_token",
      "WHATSAPP_PORT=5001",
      "",
      "# LinkedIn",
      "LINKEDIN_CLIENT_ID=your_client_id",
      "LINKEDIN_CLIENT_SECRET=your_client_secret",
      "LINKEDIN_ACCESS_TOKEN=your_access_token",
      "LINKEDIN_DRY_RUN=true",
      "",
      "# General",
      "DRY_RUN=true"
    ]
  }
}
